@model BankUser
<div style="padding:10px">
    <a asp-controller="bankadmin" asp-action="index" class="btn btn-primary">Go Back</a>

    <form asp-controller="bankadmin" asp-action="createuser">
        <div class="form-group">
            <label asp-for="@Model.userId">User id</label>
            <input type="number" asp-for="@Model.userId" class="form-control" placeholder="User Id" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.userName">Name</label>
            <input type="text" asp-for="@Model.userName" class="form-control" placeholder="Name" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.userAddress">Address</label>
            <input type="text" asp-for="@Model.userAddress" class="form-control" placeholder="Address" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.userAccountNumber">Account Number</label>
            <input type="number" asp-for="@Model.userAccountNumber" class="form-control" placeholder="Account Number" />
        </div>

        <div class="form-group">
            <label asp-for="@Model.userAccountBalance">Initial Deposit</label>
            <input type="number" asp-for="@Model.userAccountBalance" class="form-control" placeholder="Initial Deposit" />
        </div>

        <button class="btn btn-primary" type="submit">Submit</button>

    </form>
</div>
